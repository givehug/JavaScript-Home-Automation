{
	"compilerOptions": {
		"allowJs": true,
		"target": "es6",
		"module": "es6",
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"types": [
			"node",
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"dom",
            "es2017",
            "dom.iterable",
            "scripthost"
        ]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
        "tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}