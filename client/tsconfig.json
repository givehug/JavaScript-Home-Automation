{
	"compilerOptions": {
		"allowJs": true,
		"target": "es6",
		"module": "es6",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"types": [
			"node",
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"dom",
      "es2015",
      "es2015.promise"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}